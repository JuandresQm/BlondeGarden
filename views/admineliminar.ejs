      <div class="container p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h4 style="font-weight: bold;">¿Está seguro de eliminar este producto?</h4>
                    </div>
                    <div class="card-body">
                        <form action="/admin/productos/delete/<%= productos.id %>" method="POST">
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Nombre</h6>
                            </div>
                            <div class="form-group">
                                <input type="text" name="nombre" id="nombre" placeholder="Ingrese el nombre" disabled maxlength="255" class="form-control" value="<%= productos.nombre %>" >
                            </div>
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Código</h6>
                            </div>
                            <div class="form-group">
                                <input type="text" name="codigo" id="codigo" placeholder="Ingrese el codigo "  disabled maxlength="255" class="form-control" value="<%= productos.codigo %>">
                            </div>
                             <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Precio</h6>
                            </div>
                            <div class="form-group">
                                <input type="number" name="precio" id="precio" placeholder="Ingrese el precio "  disabled max="1000000" class="form-control" min="1" step="0.01" value="<%= productos.precio %>">
                            </div>
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Descripción</h6>
                            </div>
                            <div class="form-group">
                                <textarea maxlength="500" name="descripcion" id="descripcion" class="form-control" disabled maxlength="255"><%= productos.descripcion %></textarea>
                            </div>
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Marca</h6>
                            </div>
                            <div class="form-group">
                                <input type="text" name="marca" id="marca" placeholder="Ingrese la marca" class="form-control" disabled maxlength="255" value="<%= productos.marca %>">
                            </div>
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Uso</h6>
                            </div>
                            <div class="form-group">
                                <input type="text" name="uso" id="uso" placeholder="Ingrese el uso" class="form-control"  disabled maxlength="255" value="<%= productos.uso %>">
                            </div>
                            <div style="text-align: left;">
                                <h6 class="mt-3" style="font-weight: bold;">Categoria</h6>
                            </div>
                            <div class="form-group">
                                <input type="number" name="categoria_id" id="categoria_id" placeholder="Ingrese la id de la categoria" disabled class="form-control" min="1" value="<%= productos.categoria_id %>">
                            </div>
                            <div class="form-group">
                                <button type ="submit" class="btn btn-success btn-block mt-3">
                                    Eliminar
                                </button>
                                <a href="/admin" class="btn btn-success btn-block mt-3">Cancelar</a>
                            
                            </div> 
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </body>
</html>